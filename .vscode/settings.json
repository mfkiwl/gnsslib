{
    // =============================================================================
    // GNSS Library Project Settings
    // =============================================================================

    // Editor settings
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.rulers": [80, 120],
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 120,

    // C/C++ formatting
    "C_Cpp.formatting": "clangFormat",
    "C_Cpp.clang_format_style": "file",

    // Files associations
    "files.associations": {
        "*.h": "c",
        "*.c": "c"
    },

    // Naming convention hints (for IntelliSense)
    "C_Cpp.intelliSenseEngine": "default",

    // Code style enforcement
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit"
    },

    // Project specific naming conventions (comments for reference)
    // Functions: PascalCase (e.g., Prn2Sat, MatMul)
    // Variables: camelCase (e.g., satIndex, matrixData)
    // Constants: UPPER_SNAKE_CASE (e.g., MAX_PRN_GPS, FREQ_L1)
    // Structures/Types: camelCase + _t suffix (e.g., mat_t, satStr_t, leapSec_t)

    // File formatting
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,

    // IntelliSense and auto-completion
    "C_Cpp.autocomplete": "default",
    "C_Cpp.suggestSnippets": true,

    // Error squiggles
    "C_Cpp.errorSquiggles": "enabled"
}
